# NicheFinder Server Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
HOST=0.0.0.0
PORT=3001

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite://data/nichefinder.db

# For PostgreSQL (alternative):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nichefinder

# Scheduler Configuration
ENABLE_SCHEDULER=true

# PEG Engine URL (for proxying requests)
PEG_ENGINE_URL=http://localhost:3007

# Logging
RUST_LOG=info

